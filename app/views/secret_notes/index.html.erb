<p id="notice"><%= notice %></p>

<h1>Secret Notes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Encrypted Note</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secret_notes.each do |secret_note| %>
      <tr>
        <td><%= secret_note.title %></td>
        <td><%= secret_note.note %></td>
        <td><%= hcd(secret_note.note) %></td>
        <td><%= link_to 'Show', secret_note %></td>
        <td><%= link_to 'Edit', edit_secret_note_path(secret_note) %></td>
        <td><%= link_to 'Destroy', secret_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Secret Note', new_secret_note_path %>
